{
  "name": "@deepgram-web/www",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "predev": "yarn clean && yarn link-content",
    "dev": "astro dev --experimental-integrations",
    "prebuild": "yarn clean && yarn build-content",
    "build": "astro build --experimental-integrations",
    "preview": "astro preview",
    "clean": "rm -rf ./src/content",
    "build-content": "cp -r ../content/www/ ./src/content/",
    "link-content": "ln -s ../../content/www/ ./src/content"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^0.2.1",
    "@types/node": "^17.0.42",
    "astro": "^1.0.0-beta.29",
    "glob": "^8.0.3",
    "node-html-parser": "^5.3.3",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.1.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "vue": "^3.2.33"
  },
  "dependencies": {
    "@astrojs/vue": "^0.1.5"
  }
}
