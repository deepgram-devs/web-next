---
import Brand from "../../Brand.astro"
const { cta, brands } = Astro.props
---

<section class="logos-divider w-full">
  <div class="flex flex-col items-center">
    <p class="cta">{cta}</p>
    <div class="flex logos space-x-10 items-center">
    {brands.map(brand=>{
      return <img src={`/${brand}.png`} class="logo text-storm" />
    })}
    </div>
  </div>
</section>

<style>

  section {
    @apply mb-24 mt-4;
  }

  .cta {
    @apply font-bold text-xl;
    @apply mb-4;
  }
  .logo {
    height: calc(100vw/20)
  }

</style>