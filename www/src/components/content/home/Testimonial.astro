---
const { quote, name, role, image } = Astro.props
---

<section class="logos-divider">
  <div class="max-w-screen-2xl mx-auto">
      <svg width="83" height="62" viewBox="0 0 83 62" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0.832031 36.2744C0.832031 16.2423 17.0397 0 37.0291 0L36.9072 17.785C30.5809 17.785 24.9983 20.9985 21.7045 25.8828H36.9246V62H0.832031V36.2744Z" fill="#FB3640"/>
        <path d="M46.6348 36.2744C46.6348 16.2423 62.8424 0 82.8319 0L82.7099 17.785C76.3837 17.785 70.801 20.9985 67.5072 25.8828H82.7273V62H46.6348V36.2744Z" fill="#FB3640"/>
      </svg>
      <h2>{quote}</h2>
      <div class="flex items-center mb-6">
        <img src="/todd-fisher.png" class="pr-6 w-5/12" />
        <div>
          <p class="font-semibold">{name}</p>
          <p>{role}</p>
        </div>
      </div>
      <a>See Customer Stories</a>
    </div>
 
</section>

<style>

  section {
  @apply w-full flex flex-col items-center;
  @apply px-16 md:px-40 xl:px-80;
}

  h2 {
  @apply text-4xl font-bold;
  @apply mb-6;
}

svg {
  @apply mb-6;
}
</style>