---
import Promo from '../../../../../core-components/components/promo/Promo.astro';
const { promo, title, body, primaryCta, secondaryCta, tertiaryCta, page } = Astro.props
---

{page === 'home' ? 

<section class="hero">
  <Promo>{promo}</Promo>
  <h1>{title}</h1>
  <p>{body}</p>
  <p>{primaryCta}</p>
  <p>{secondaryCta}</p>
  <p>{tertiaryCta}</p>
</section>

: null

}

<style>
  .hero {
    @apply bg-black;

    h1 {
      @apply bg-white;
    }
  }


</style>
