---
import Promo from '../../../../../core-components/components/promo/Promo.astro';
import Hyperlink from '../../Hyperlink.astro';
const { promo, title, body, primaryCta, secondaryCta, tertiaryCta, image, alt } = Astro.props

---

<section class="hero hero-split">
  <div class="hero-left">
    <Promo>{promo}</Promo>
    <h1>{title}</h1>
    <p>{body}</p>
    <p>{primaryCta}</p>
    <p>{secondaryCta}</p>
    <p>{tertiaryCta}</p>
    <div class="flex space-x-7">
      <a
        href="https://console.deepgram.com/signup"
        rel="noopener noreferrer"
        class="button button--primary"
        >Transcribe More Free</a
      >
      <a
        href="https://console.deepgram.com/signup"
        rel="noopener noreferrer"
        class="button button--secondary"
        >Transcribe More Free</a
      >
      <Hyperlink icon="arrowright">Explore the Docs</Hyperlink>
    </div>
  </div>
  <div class="hero-right">
    <img class="hero-image" src={image} alt={alt} title={alt} />
  </div>
</section>