---
const { strap, title, body, primaryCta, secondaryCta, tertiaryCta, image, alt } = Astro.props
---

<section class="hero hero-split">
  <div class="hero-left">
    <span>{strap}</span>
    <h1>{title}</h1>
    <p>{body}</p>
    <p>{primaryCta}</p>
    <p>{secondaryCta}</p>
    <p>{tertiaryCta}</p>
  </div>
  <div class="hero-right">
    <img class="hero-image" src={image} alt={alt} title={alt} />
  </div>
</section>