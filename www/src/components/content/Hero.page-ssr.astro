---
import FlareSection from "../layout/FlareSection.astro";

const { layout } = Astro.props
---

<FlareSection class={`hero-centered ${Astro.props.class}`} background={Astro.props.background}>
  <slot name="header" />

{layout === "centered" && (
  <>
      <div class="flex flex-col items-center">
        <slot />
      
        <div class="call-to-action flex justify-center space-x-7">
          <slot name="cta" />
        </div>
      </div>
  </>
)}

  <slot name="footer" />
</FlareSection>

<style>
  .hero-centered :global(h1) {
    @apply mt-10 mb-20 w-[54rem] text-center text-6xl
  }
</style>