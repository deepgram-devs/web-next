---
const { background, color } = Astro.props;
---

<div class={`contrast contrast--${color} contrast--end--${background}`}>
  <slot />
</div>

<style>
  .contrast {
    position: relative;
    margin-top: 3.5rem;
    margin-bottom: 3.5rem;
    padding: 5rem 0;
  }

  .contrast::after,
  .contrast::before {
    @apply w-full;
    height: 3.5rem;
    content: "";
    position: absolute;
    margin: 5rem 0;
  }

  .contrast::before {
    clip-path: ellipse(75% 100% at 50% 100%);
    top: -3.5rem;
  }

  .contrast::after {
    clip-path: ellipse(75% 100% at 50% 100%);
    bottom: -3.5rem;
  }

  @media (min-width: 640px) {
    .contrast {
      margin-top: 7.125rem;
      margin-bottom: 7.125rem;
    }

    .contrast::after,
    .contrast::before {
      height: 7.125rem;
    }

    .contrast::before {
      top: -7.125rem;
    }

    .contrast::after {
      bottom: -7.125rem;
    }
  }

  @media (min-width: 1024px) {
    .contrast {
      margin-top: 14.25rem;
      margin-bottom: 14.25rem;
    }

    .contrast::after,
    .contrast::before {
      height: 14.25rem;
    }

    .contrast::before {
      top: -14.25rem;
    }

    .contrast::after {
      bottom: -14.25rem;
    }
  }

  @media (min-width: 1600px) {
    .contrast::before {
      clip-path: ellipse(65% 100% at 50% 100%);
    }

    .contrast::after {
      clip-path: ellipse(65% 100% at 50% 100%);
    }
  }

  .contrast--black,
  .contrast--black::before {
    @apply bg-black;
  }

  .contrast--end--black::after {
    @apply bg-black;
  }

  .contrast--offBlack,
  .contrast--offBlack::before {
    @apply bg-offBlack;
  }

  .contrast--end--offBlack::after {
    @apply bg-offBlack;
  }

  .contrast--darkCharcoal,
  .contrast--darkCharcoal::before {
    @apply bg-darkCharcoal;
  }

  .contrast--end--darkCharcoal::after {
    @apply bg-darkCharcoal;
  }

  .contrast--white,
  .contrast--white::before {
    @apply bg-white;
  }

  .contrast--end--white::after {
    @apply bg-white;
  }
</style>
