---
export interface Props extends Record<any, any> {
	type?: string;
	variant?: string;
}

const { type, variant,...props } = {
	...Astro.props,
} as Props;

props.type = type || 'button';
props.variant = variant || null;
---

<button class="dg-button" {...props}><slot /></button>

<style>
	.dg-button {
		@apply flex justify-center items-center;
		@apply font-bold;
		@apply text-base;
		@apply leading-4;
		@apply py-2 px-6;
		@apply outline-none;
		@apply whitespace-nowrap;
		@apply bg-meadow;
		@apply text-darkCharcoal;
		height: 42px;
    width: fit-content;
	}
</style>