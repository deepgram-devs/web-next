---
export interface Props extends Record<any, any> {
	type?: string;
	variant?: string;
}

const { type, variant,...props } = {
	...Astro.props,
} as Props;

props.type = type || 'button';
props.variant = variant || null;
---

<button class={`
dg-button 
${variant === 'small' ? "dg-button--small" : ""}
${variant === 'big' ? "dg-button--big" : ""}
`} {...props}><slot /></button>

<style>
	.dg-button {
		@apply flex justify-center items-center;
		@apply font-bold;
		@apply text-base;
		@apply leading-4;
		@apply py-2 px-6;
		@apply whitespace-nowrap;
		@apply bg-meadow;
		@apply text-darkCharcoal;
		height: 3.25em;
    width: fit-content;
	}

	.dg-button--small {
		height: 2.375em;
		@apply py-2 px-4;
	}

	.dg-button--big {
		height: 4.125em;
	}
</style>Â 