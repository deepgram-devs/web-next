---
import ComponentPreview from "../components/partials/ComponentPreview.astro";
import ComponentStaticPreview from "../components/partials/ComponentStaticPreview.astro";
import ComponentSection from "../components/partials/ComponentSection.astro";
import Layout from "../layouts/Default.astro";
import BlogCard from "../shared/components/cards/BlogCard.astro";
import PrimarySection from "../shared/components/layout/PrimarySection.astro";
import LibraryIntro from "../components/partials/LibraryIntro.astro";
import CodeGroup from "../shared/components/code/CodeGroup.astro"
import CodeBlock from "../shared/components/code/CodeBlock.astro"

import { Code } from 'astro/components';
---

<Layout>
  <PrimarySection class="pt-10">
    <h1>Component Library</h1>

    <LibraryIntro />

    <ComponentSection title="Blog sections">
      <ComponentStaticPreview
        id="blog-card"
        title="Single blog card"
        snippet={`<BlogCard 
	title="Test post" 
	image="//placeimg.com/640/480/any" 
	tag="Vue" 
	author="lukeocodes" 
/>`}
      >
        <BlogCard
          title="Test post"
          image="//placeimg.com/640/480/any"
          tag="Vue"
          author="lukeocodes"
        />
      </ComponentStaticPreview>
    </ComponentSection>

    <ComponentSection title="Blog sections">
      <ComponentPreview
        id="blog-card"
        title="Single blog card"
        snippet={`<BlogCard 
	      title="Test post" 
	      image="//placeimg.com/640/480/any" 
	      tag="Vue" 
	      author="lukeocodes" 
        />`}
      >
        <BlogCard
          title="Test post"
          image="//placeimg.com/640/480/any"
          tag="Vue"
          author="lukeocodes"
        />
      </ComponentPreview>
    </ComponentSection>
    
    <ComponentSection title="Code sections">
      <ComponentStaticPreview
        id="code-group"
        title="Code Group"
        snippet={`<CodeGroup langs={['npm', 'yarn', 'pnpm']} x-data="{lang:'npm'}">
  <CodeBlock lang="yarn"  >
    <Code lang="bash" code="yarn "/>
  </CodeBlock>
  <CodeBlock lang="npm">
    <Code lang="bash" code="npm install"/>
  </CodeBlock>
  <CodeBlock lang="pnpm">
    <Code lang="bash" code="pnpm install"/>
  </CodeBlock>
  </CodeGroup>`}
      >
        <CodeGroup langs={['npm', 'yarn', 'pnpm']} x-data="{lang:'npm'}">
			    <CodeBlock lang="yarn"  >
				    <Code lang="bash" code="yarn "/>
			    </CodeBlock>
			    <CodeBlock lang="npm">
				    <Code lang="bash" code="npm install"/>
			    </CodeBlock>
			    <CodeBlock lang="pnpm">
				    <Code lang="bash" code="pnpm install"/>
			    </CodeBlock>
		    </CodeGroup>
      </ComponentStaticPreview>
    </ComponentSection>
    
    <ComponentSection>
      <ComponentPreview
        id="code-group"
        title="Code Group"
        snippet={`<CodeGroup langs={['npm', 'yarn', 'pnpm']} x-data="{lang:'npm'}">
  <CodeBlock lang="yarn"  >
    <Code lang="bash" code="yarn "/>
  </CodeBlock>
  <CodeBlock lang="npm">
    <Code lang="bash" code="npm install"/>
  </CodeBlock>
  <CodeBlock lang="pnpm">
    <Code lang="bash" code="pnpm install"/>
  </CodeBlock>
  </CodeGroup>`}
      >
        <CodeGroup langs={['npm', 'yarn', 'pnpm']} x-data="{lang:'npm'}">
			    <CodeBlock lang="yarn"  >
				    <Code lang="bash" code="yarn "/>
			    </CodeBlock>
			    <CodeBlock lang="npm">
				    <Code lang="bash" code="npm install"/>
			    </CodeBlock>
			    <CodeBlock lang="pnpm">
				    <Code lang="bash" code="pnpm install"/>
			    </CodeBlock>
		    </CodeGroup>
      </ComponentPreview>
    </ComponentSection>

    <ComponentSection>
      <ComponentStaticPreview
        id="code-group"
        title="Code Block without menu"
        snippet={`<CodeGroup>
			    <CodeBlock  >
				    <Code code="yarn"/>
			    </CodeBlock>
		    </CodeGroup>`}
      >
        <CodeGroup>
			    <CodeBlock lang="yarn">
				    <Code code="yarn"/>
			    </CodeBlock>
		    </CodeGroup>
      </ComponentStaticPreview>
    </ComponentSection>
  </PrimarySection>
</Layout>
