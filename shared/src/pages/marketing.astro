---
import ComponentStaticPreview from "../components/partials/ComponentStaticPreview.astro";
import ComponentStaticPreview from "../components/partials/ComponentStaticPreview.astro";
import ComponentSection from "../components/partials/ComponentSection.astro";
import Layout from "../layouts/Default.astro";
import PrimarySection from "../shared/components/layout/PrimarySection.astro";
import AmplifyQuote from "../shared/components/quotes/AmplifyQuote.astro";
import Feedback from "../shared/components/forms/Feedback.astro";
import NarrowSection from "../shared/components/layout/NarrowSection.astro";
import NewsletterPromo from "../shared/components/promos/NewsletterPromo.astro";
import WebinarPromo from "../shared/components/promos/WebinarPromo.astro";
import WhitepaperPromo from "../shared/components/promos/WhitepaperPromo.astro";
import EventPromo from "../shared/components/promos/EventPromo.astro";
import LinkPromo from "../shared/components/promos/LinkPromo.astro";

import eventImg from "../shared/assets/temp_images/white-arrows.svg";
import webinarImg from "../shared/assets/temp_images/red-ticks.svg";
import whitepaperImg from "../shared/assets/temp_images/black-quote.svg";
import linkImg from "../shared/assets/temp_images/black-arrows.svg";
import Link from "../shared/components/general/Link.astro";
import InlineIcon from "../shared/components/general/InlineIcon.astro";
import Button from "../shared/components/general/Button.astro";
---

<Layout>
	<PrimarySection class="pt-10">
		<h1>Marketing Components</h1>

		<a href="/">Back</a>

		<ComponentSection title="Icons, Buttons and Links">
			<ComponentStaticPreview
				id="text"
				title="Text"
				snippet={`<span><InlineIcon icon="share">Just text with Icon</InlineIcon><span>
<h1><InlineIcon icon="email" iconSuffix>Just text with Icon</InlineIcon></h1>
<h3><InlineIcon icon="xmark-large" iconSuffix>Close</InlineIcon></h3>`}
			>
				<div class="flex flex-col space-y-2">
					<span><InlineIcon icon="share">Just text with Icon</InlineIcon></span>
					<h1><InlineIcon icon="email" iconSuffix>Just text with Icon</InlineIcon></h1>
					<h3><InlineIcon icon="xmark-large" iconSuffix>Close</InlineIcon></h3>
				</div>
			</ComponentStaticPreview>

			<ComponentStaticPreview
				id="links"
				title="Links"
				snippet={`<Link href="#" class="text-red-900">Link with no Icon</Link>
<h1><Link href="#">Link with no Icon</Link></h1>
<h2><Link href="#">Link with no Icon</Link></h2>
<h3><Link href="#">Link with no Icon</Link></h3>
<h4><Link href="#">Link with no Icon</Link></h4>
<h5><Link href="#">Link with no Icon</Link></h5>
<h6><Link href="#" class="text-black">Link with no Icon</Link></h6>
<Link href="#" icon="email" class="text-red-900">Link with Icon</Link>
<h1><Link href="#" icon="email">Link with Icon</Link></h1>
<h2><Link href="#" icon="email">Link with Icon</Link></h2>
<h3><Link href="#" icon="email">Link with Icon</Link></h3>
<h4><Link href="#" icon="email">Link with Icon</Link></h4>
<h5><Link href="#" icon="email">Link with Icon</Link></h5>
<h6><Link href="#" icon="email" class="text-black">Link with Icon</Link></h6>
<Link href="#" icon="email" iconSuffix class="text-red-900">Link with suffix Icon</Link>
<h1><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h1>
<h2><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h2>
<h3><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h3>
<h4><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h4>
<h5><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h5>
<h6><Link href="#" icon="email" iconSuffix class="text-black">Link with suffix Icon</Link></h6>
<Link href="#" class="text-white button button--primary">Link like Primary Button</Link>
<Link href="#" class="text-white button button--primary button--small">Small Link like Primary Button</Link>
<Link href="#" class="text-white button button--primary button--large">Large Link like Primary Button</Link>
<Link href="#" class="text-white button button--primary button--block">Block Link like Primary Button</Link>
<Link href="#" class="text-white button button--secondary">Link like Secondary Button</Link>
<Link href="#" class="text-white button button--tertiary">Link like Tertiary Button</Link>
<Link href="#" class="text-white button button--quaternary">Link like Quaternary Button</Link>
<Link href="#" class="text-white button button--quinary">Link like Quinary Button</Link>
<Link href="#" class="text-white button button--senary">Link like Senary Button</Link>
<Link href="#" icon="angle-down" class="text-white button button--primary">Link like Primary Button with Icon</Link>
<Link href="#" icon="angle-down" iconSuffix class="text-white button button--secondary">Link like Secondary Button with suffix Icon</Link>`}
			>
				<div class="flex flex-col space-y-2">
					<Link href="#" class="text-red-900">Link with no Icon</Link>
					<h1><Link href="#">Link with no Icon</Link></h1>
					<h2><Link href="#">Link with no Icon</Link></h2>
					<h3><Link href="#">Link with no Icon</Link></h3>
					<h4><Link href="#">Link with no Icon</Link></h4>
					<h5><Link href="#">Link with no Icon</Link></h5>
					<h6><Link href="#" class="text-black">Link with no Icon</Link></h6>
					<Link href="#" icon="email" class="text-red-900">Link with Icon</Link>
					<h1><Link href="#" icon="email">Link with Icon</Link></h1>
					<h2><Link href="#" icon="email">Link with Icon</Link></h2>
					<h3><Link href="#" icon="email">Link with Icon</Link></h3>
					<h4><Link href="#" icon="email">Link with Icon</Link></h4>
					<h5><Link href="#" icon="email">Link with Icon</Link></h5>
					<h6><Link href="#" icon="email" class="text-black">Link with Icon</Link></h6>
					<Link href="#" icon="email" iconSuffix class="text-red-900">Link with suffix Icon</Link>
					<h1><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h1>
					<h2><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h2>
					<h3><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h3>
					<h4><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h4>
					<h5><Link href="#" icon="email" iconSuffix>Link with suffix Icon</Link></h5>
					<h6><Link href="#" icon="email" iconSuffix class="text-black">Link with suffix Icon</Link></h6>
				</div>
			</ComponentStaticPreview>

			<ComponentStaticPreview id="buttons" title="Buttons" snippet={``}>
				<div class="flex flex-col space-y-2">
					<p class="text-purple-500">Button Primary</p>
					<div class="flex flex-wrap space-x-2">
						<Button type="button" value="test" class="button button--primary">Button</Button>
						<Button type="button" value="test" class="button button--primary button--alternative">Button*</Button>
						<Button type="button" value="test" class="button button--primary" disabled>Button</Button>
						<Button type="button" value="test" class="button button--primary button--light-bg" disabled>Button</Button>
					</div>
					<p class="text-purple-500">Button Secondary</p>
					<div class="flex flex-wrap space-x-2">
						<Button type="button" value="test" class="button button--secondary">Button</Button>
						<Button type="button" value="test" class="button button--secondary" disabled>Button</Button>
						<Button type="button" value="test" class="button button--secondary button--light-bg" disabled>Button</Button>
					</div>
					<p class="text-purple-500">Button Small Primary</p>
					<div class="flex flex-wrap space-x-2">
						<Button type="button" value="test" class="button button--small button--primary">Button</Button>
						<Button type="button" value="test" class="button button--small button--primary button--alternative">Button*</Button>
						<Button type="button" value="test" class="button button--small button--primary" disabled>Button</Button>
						<Button type="button" value="test" class="button button--small button--primary button--light-bg" disabled>Button</Button>
					</div>
					<p class="text-purple-500">Button Small Secondary</p>
					<div class="flex flex-wrap space-x-2">
						<Button type="button" value="test" class="button button--small button--secondary">Button</Button>
						<Button type="button" value="test" class="button button--small button--secondary" disabled>Button</Button>
						<Button type="button" value="test" class="button button--small button--secondary button--light-bg" disabled>Button</Button>
					</div>
					<p class="text-purple-500">Button Mini</p>
					<div class="flex flex-wrap space-x-2">
						<Button type="button" value="test" class="button button--mini button--secondary">Menu</Button>
						<Button type="button" value="test" class="button button--mini button--primary">Sign Up</Button>
					</div>
					<p class="text-purple-500">Button Block</p>
					<div class="flex flex-wrap gap-2">
						<Button type="button" value="test" class="button button--block button--primary">Button</Button>
						<Button type="button" value="test" class="button button--block button--primary button--alternative">Button*</Button>
						<Button type="button" value="test" class="button button--block button--secondary">Button</Button>
						<Button type="button" value="test" class="button button--block button--small button--secondary">Button</Button>
						<Button type="button" value="test" class="button button--block button--mini button--secondary">Button</Button>
					</div>
					<p class="text-purple-500">Button w/ Icons</p>
					<div class="flex flex-wrap gap-2">
						<Button icon="arrow-right" iconSuffix type="button" value="test" class="button button--primary">View All</Button>
					</div>
				</div>
			</ComponentStaticPreview>

			<ComponentStaticPreview id="forms-inputs" title="Forms and Inputs" snippet={``} class="flex-col">
				<div class="w-full mb-5">
					<p class="text-purple-500">Simple Form</p>
					<div class=" bg-darkCharcoal text-white p-10 w-full">
						<div class="input-group">
							<label for="input-1">Name (first and last)</label>
							<input id="input-1" placeholder="Your name" />
						</div>
						<div class="input-group">
							<label for="input-1">Name (first and last)</label>
							<input id="input-1" placeholder="Your name" />
						</div>
						<Button type="button" value="test" class="button button--primary">Button</Button>
					</div>
				</div>
				<div class="w-full">
					<p class="text-purple-500">Simple Form (Light bg)</p>
					<div class="p-10 w-full">
						<div class="input-group input-group--light-bg">
							<label for="input-2">Name (first and last)</label>
							<input id="input-2" placeholder="Your name" />
						</div>
						<div class="input-group input-group--light-bg">
							<label for="input-2">Name (first and last)</label>
							<input id="input-2" placeholder="Your name" />
						</div>
						<Button type="button" value="test" class="button button--primary">Button</Button>
					</div>
				</div>
				<div class="w-full">
					<p class="text-purple-500">Inline Form (Light bg)</p>
					<div class="p-10 w-full">
						<div class="form--inline">
							<div class="input-group input-group--inline input-group--light-bg">
								<label for="input-2">Name (first and last)</label>
								<input id="input-2" placeholder="Your name" />
							</div>
							<Button type="button" value="test" class="button button--primary">Button</Button>
						</div>
					</div>
				</div>
			</ComponentStaticPreview>
		</ComponentSection>

		<ComponentSection title="Quotes and Testimonials">
			<ComponentStaticPreview
				id="quote-amplify"
				title="Amplify Quote"
				snippet={`<AmplifyQuote>
	<h1>Ready to see Deepgram in Action?</h1>
	<p>Get your API key and unlock $150 in free credit.</p>
	<a href="https://console.deepgram.com/signup">Start Free</a>
</AmplifyQuote>`}
			>
				<AmplifyQuote>
					<h1>Ready to see Deepgram in Action?</h1>
					<p>Get your API key and unlock $150 in free credit.</p>
					<a href="https://console.deepgram.com/signup">Start Free</a>
				</AmplifyQuote>
			</ComponentStaticPreview>
			<ComponentStaticPreview
				id="quote-amplify-dark"
				title="Amplify Quote (dark)"
				snippet={`<AmplifyQuote>
	<h1>Ready to see Deepgram in Action?</h1>
	<p>Get your API key and unlock $150 in free credit.</p>
	<a href="https://console.deepgram.com/signup">Start Free</a>
</AmplifyQuote>`}
			>
				<AmplifyQuote class="bg-black text-white">
					<h1>Ready to see Deepgram in Action?</h1>
					<p>Get your API key and unlock $150 in free credit.</p>
					<a href="https://console.deepgram.com/signup">Start Free</a>
				</AmplifyQuote>
			</ComponentStaticPreview>
		</ComponentSection>

		<ComponentSection title="Forms">
			<ComponentStaticPreview id="form-feedback" title="Feedback Form" snippet={`<Feedback>`}>
				<NarrowSection><Feedback /></NarrowSection>
			</ComponentStaticPreview>
		</ComponentSection>

		<ComponentSection title="Promos">
			<p>Promos can be <code>theme=white</code> or <code>theme=black</code> or <code>theme=red</code></p>
			<ComponentStaticPreview id="promo-newsletter" title="Newsletter Promo" snippet={`<NewsletterPromo/>`}>
				<NewsletterPromo />
			</ComponentStaticPreview>
			<ComponentStaticPreview
				id="promo-webinar"
				title="Webinar Promo"
				snippet={`<WebinarPromo
	title="How to Make Your Application Voice-Ready"
	date="09-10-22"
	humanReadableDate="Wed Apr 27 11a PT | 12p ET"
	theme="red"
	backgroundImage={webinarImg}
	formProps={[
		{ label: "Name (first and last)", placeholder: "Your name" },
		{ label: "Work email", placeholder: "you@company.com", type: "email" },
		{ label: "Role", placeholder: "Role/Title" },
	]}
	buttonText="Register"
/>`}
			>
				<WebinarPromo
					title="How to Make Your Application Voice-Ready"
					date="09-10-22"
					humanReadableDate="Wed Apr 27 11a PT | 12p ET"
					theme="red"
					backgroundImage={webinarImg}
					formProps={[
						{ label: "Name (first and last)", placeholder: "Your name" },
						{ label: "Work email", placeholder: "you@company.com", type: "email" },
						{ label: "Role", placeholder: "Role/Title" },
					]}
					buttonText="Register"
				/>
			</ComponentStaticPreview>
			<ComponentStaticPreview
				id="promo-event"
				title="Event Promo"
				snippet={`<EventPromo
	title="An Event I Just Made Up"
	date="09-10-22"
	humanReadableDate="Wed Apr 27 11a PT | 12p ET"
	theme="white"
	backgroundImage={eventImg}
	formProps={[
		{ label: "Name (first and last)", placeholder: "Your name" },
		{ label: "Work email", placeholder: "you@company.com", type: "email" },
		{ label: "Role", placeholder: "Role/Title" },
	]}
	buttonText="Register"
/>`}
			>
				<EventPromo
					title="An Event I Just Made Up"
					date="09-10-22"
					humanReadableDate="Wed Apr 27 11a PT | 12p ET"
					theme="white"
					backgroundImage={eventImg}
					formProps={[
						{ label: "Name (first and last)", placeholder: "Your name" },
						{ label: "Work email", placeholder: "you@company.com", type: "email" },
						{ label: "Role", placeholder: "Role/Title" },
					]}
					buttonText="Register"
				/>
			</ComponentStaticPreview>
			<ComponentStaticPreview
				id="promo-whitepaper"
				title="Whitepaper Promo"
				snippet={`<WhitepaperPromo
	title="How to Make Your Application Voice-Ready"
	theme="black"
	backgroundImage={whitepaperImg}
	formProps={[
		{ label: "Name (first and last)", placeholder: "Your name" },
		{ label: "Work email", placeholder: "you@company.com", type: "email" },
		{ label: "Role", placeholder: "Role/Title" },
	]}
	buttonText="Download"
/>`}
			>
				<WhitepaperPromo
					title="How to Make Your Application Voice-Ready"
					theme="black"
					backgroundImage={whitepaperImg}
					formProps={[
						{ label: "Name (first and last)", placeholder: "Your name" },
						{ label: "Work email", placeholder: "you@company.com", type: "email" },
						{ label: "Role", placeholder: "Role/Title" },
					]}
					buttonText="Download"
				/>
			</ComponentStaticPreview>
			<ComponentStaticPreview
				id="promo-link"
				title="Link Promo"
				snippet={`<LinkPromo
	strapline="Using Google or Amazon STT?"
	title="Try the ASR Comparison Tool"
	description="See how Deepgram fares against the big guys on tough audio."
	href="/marketing"
	theme="black"
	backgroundImage={linkImg}
	buttonText="Try it Free"
/>`}
			>
				<LinkPromo
					strapline="Using Google or Amazon STT?"
					title="Try the ASR Comparison Tool"
					description="See how Deepgram fares against the big guys on tough audio."
					href="/marketing"
					theme="black"
					backgroundImage={linkImg}
					buttonText="Try it Free"
				/>
			</ComponentStaticPreview>
		</ComponentSection>
	</PrimarySection>
</Layout>
