---
import ComponentSection from "../components/partials/ComponentSection.astro";
import ComponentStaticPreview from "../components/partials/ComponentStaticPreview.astro";
import Layout from "../layouts/Default.astro";
import PrimarySection from "../shared/components/layout/PrimarySection.astro";
import AmplifyQuote from "../shared/components/quotes/AmplifyQuote.astro";
import CodeGroup from "../shared/components/code/CodeGroup.astro";
import CodeBlock from "../shared/components/code/CodeBlock.astro";
import Code from "astro/components/Code.astro";
import CodePlayground from "../shared/components/code/CodePlayground.astro";
---

<Layout>
	<PrimarySection class="pt-10">
		<h1>Sandra's Sandbox</h1>

		<a href="/">Back</a>

		<ComponentSection title="Stuff I am working on">

			<ComponentSection title="Code Playground Component">
				<CodePlayground width="50%" src="https://codepen.io/sandrarodgers/embed/jOBrmrw"></CodePlayground>
			
							<CodePlayground width="50%" src="https://codesandbox.io/embed/v-tooltip-hn2gf?fontsize=14&hidenavigation=1&theme=dark" allow="accelerometer; ambient-light-sensor; camera; encrypted-media; geolocation; gyroscope; hid; microphone; midi; payment; usb; vr; xr-spatial-tracking" sandbox="allow-forms allow-modals allow-popups allow-presentation allow-same-origin allow-scripts"></CodePlayground>
			</ComponentSection>

		</ComponentSection>
	
	</PrimarySection>

	

	<ComponentSection>
		<ComponentStaticPreview
			id="code-group"
			title="Code Group"
			snippet={`<CodeGroup langs={['npm', 'yarn', 'pnpm']} x-data="{lang:'npm'}">
    <CodeBlock lang="yarn"  >
      <Code lang="bash" code="yarn "/>
    </CodeBlock>
    <CodeBlock lang="npm">
      <Code lang="bash" code="npm install"/>
    </CodeBlock>
    <CodeBlock lang="pnpm">
      <Code lang="bash" code="pnpm install"/>
    </CodeBlock>
    </CodeGroup>`}
		>
			<CodeGroup tabs={["npm", "yarn", "pnpm"]} default="npm">
				<CodeBlock tab="yarn">
					<Code lang="bash" code="yarn " />
				</CodeBlock>
				<CodeBlock tab="npm">
					<Code lang="bash" code="npm install" />
				</CodeBlock>
				<CodeBlock tab="pnpm">
					<Code lang="bash" code="pnpm install" />
				</CodeBlock>
			</CodeGroup>
		</ComponentStaticPreview>
	</ComponentSection>

	<ComponentSection>
		<ComponentStaticPreview
			id="code-group"
			title="Code Group without menu"
			snippet={`<CodeGroup>
                  <CodeBlock  >
                      <Code code="yarn"/>
                  </CodeBlock>
              </CodeGroup>`}
		>
			<CodeGroup tabs={["npm"]} default="npm">
				<CodeBlock tab="npm">
					<Code code="npm" />
				</CodeBlock>
			</CodeGroup>
		</ComponentStaticPreview>
	</ComponentSection>
</Layout>
