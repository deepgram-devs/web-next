---
import ComponentPreview from "../components/partials/ComponentPreview.astro";
import ComponentStaticPreview from "../components/partials/ComponentStaticPreview.astro";
import ComponentSection from "../components/partials/ComponentSection.astro";
import Layout from "../layouts/Default.astro";
import PrimarySection from "../shared/components/layout/PrimarySection.astro";
import CodeGroup from "../shared/components/code/CodeGroup.astro";
import CodeBlock from "../shared/components/code/CodeBlock.astro";
import CodeEmbed from "../shared/components/code/CodeEmbed.astro";
import Code from "astro/components/Code.astro";
import YouTube from "../shared/components/general/YouTube.astro";
import Alert from "../shared/components/general/Alert.astro";
---

<Layout>
	<PrimarySection class="pt-10">
		<h1>CMS Components</h1>
		<a href="/">Back</a>

		<ComponentSection title="Code Components">
			<ComponentStaticPreview
				id="code-group"
				title="Code Group"
				snippet={`<CodeGroup tabs={['npm', 'yarn', 'pnpm']} default="npm">
	<CodeBlock tab="yarn">
      <Code lang="bash" code="yarn"/>
    </CodeBlock>
    <CodeBlock tab="npm">
      <Code lang="bash" code="npm install"/>
    </CodeBlock>
    <CodeBlock tab="pnpm">
      <Code lang="bash" code="pnpm install"/>
    </CodeBlock>
  </CodeGroup>`}
			>
				<CodeGroup tabs={["npm", "yarn", "pnpm"]} default="npm">
					<CodeBlock tab="yarn">
						<Code lang="bash" code="yarn" />
					</CodeBlock>
					<CodeBlock tab="npm">
						<Code lang="bash" code="npm install" />
					</CodeBlock>
					<CodeBlock tab="pnpm">
						<Code lang="bash" code="pnpm install" />
					</CodeBlock>
				</CodeGroup>
			</ComponentStaticPreview>
		</ComponentSection>

		<ComponentSection>
			<ComponentStaticPreview
				id="code-group"
				title="Code Group without menu"
				snippet={`<CodeGroup tabs={['npm']} default="npm">
	<CodeBlock tab="npm">
		<Code code="npm"/>
	</CodeBlock>
</CodeGroup>`}
			>
				<CodeGroup tabs={["npm"]} default="npm">
					<CodeBlock tab="npm">
						<Code code="npm" />
					</CodeBlock>
				</CodeGroup>
			</ComponentStaticPreview>
		</ComponentSection>

		<ComponentSection>
			<ComponentStaticPreview id="code-embed" title="Code Embed Component" snippet={`<CodeEmbed src=""/>`}>
				<CodeEmbed src="https://codepen.io/sandrarodgers/embed/jOBrmrw" />
			</ComponentStaticPreview>
			<ComponentPreview id="youtube" title="YouTube Component" snippet={`<YouTube id="kgCUn4fQTsc" />`}>
				<div class="max-w-2xl">
					<YouTube id="kgCUn4fQTsc" />
				</div>
			</ComponentPreview>
			<ComponentPreview
				id="alert-info"
				title="Alert Component - Info"
				snippet={`<Alert type="info">This post is effectively part 2 on building and publishing npm packages.</Alert>`}
			>
				<div class="max-w-2xl">
					<Alert type="info">This post is effectively part 2 on building and publishing npm packages. If you haven't read the first post...</Alert>
				</div>
			</ComponentPreview>
			<ComponentPreview
				id="alert-warning"
				title="Alert Component - Warning"
				snippet={`<Alert type="warning">This post is effectively part 2 on building and publishing npm packages.</Alert>`}
			>
				<div class="max-w-2xl">
					<Alert type="warning">This post is effectively part 2 on building and publishing npm packages. If you haven't read the first post...</Alert>
				</div>
			</ComponentPreview>
			<ComponentPreview
				id="alert-language"
				title="Alert Component - Language"
				snippet={`<Alert type="language">This post is effectively part 2 on building and publishing npm packages.</Alert>`}
			>
				<div class="max-w-2xl">
					<Alert type="language">This post is effectively part 2 on building and publishing npm packages. If you haven't read the first post...</Alert>
				</div>
			</ComponentPreview>
		</ComponentSection>
	</PrimarySection>
</Layout>
