---
import AbstractPromo from "./AbstractPromo.astro";
import PromoForm from "./PromoForm.astro";
import PromoDate from "./PromoDate.astro";
import newsletterImage from "../../assets/temp_images/white-arrows.svg";

const { humanReadableDate, ...rest } = Astro.props;
---

<AbstractPromo title="Get Deepgram news and product updates." backgroundImage={newsletterImage} theme="white" {...rest}>
	<PromoDate humanReadableDate={humanReadableDate} />
	<PromoForm theme="white" formProps={[{ label: "Work email", placeholder: "you@company.com" }]} buttonText="Submit" />
</AbstractPromo>
