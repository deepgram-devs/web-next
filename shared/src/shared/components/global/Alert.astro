---
import Icon from "../general/Icon.astro";
const { blok } = Astro.props;
const { type = "info", fill = "fill-black" } = blok;
import { renderRichText } from "@storyblok/astro";
const renderedRichText = renderRichText(blok.inner_html);
---

<div class={`alert ${type}`}>
	<div class="heading">
		<Icon class={`icon h-6 w-6 ${type}`} icon={type} />
	</div>
	<div class="text w-5/6">
		<slot>
			<div set:html={renderedRichText}></div>
		</slot>
	</div>
</div>

<style>
	.alert {
		@apply flex flex-row flex-wrap items-center align-middle;
		@apply text-sm text-black;
		@apply my-4 py-2;
	}

	.info {
		@apply border-cloud rounded-sm border;
		@apply bg-mist;
	}
	.warning {
		@apply border-sunflower/20 rounded-sm border;
		@apply bg-sunflower/20;
	}
	.language {
		@apply border-casper rounded-sm border;
		@apply bg-casper;
		@apply m-2.5;
	}

	.heading {
		@apply flex flex-row flex-wrap items-start sm:items-center;
		@apply my-4 ml-4;
	}
	.icon {
		@apply border-0 fill-black;
	}
	.icon > * {
		@apply m-2.5 mr-0;
		@apply border-0;
	}

	.icon.info {
		@apply bg-no-repeat;
		@apply h-6 w-6;
		@apply fill-casper;
	}

	.icon.warning {
		@apply bg-no-repeat;
		@apply h-6 w-6;
		@apply fill-sunflower;
	}
	.icon.language {
		@apply bg-no-repeat;
		@apply h-6 w-6;
		@apply fill-black;
	}

	.text {
		@apply m-4;
		@apply w-4/6 sm:w-5/6;
	}
	.text :global(ul > li) {
		@apply list-disc;
	}

	.text :global(ol > li) {
		@apply list-decimal;
	}

	.text :global(li) {
		@apply ml-10 pb-4;
	}

	.text :global(li:first-of-type) {
		@apply pt-4;
	}
	.text :global(p:first-of-type) {
		@apply pt-0 pb-0;
	}
</style>
