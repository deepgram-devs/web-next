---
import GenericCard from "./GenericCard.astro";
import ACube from "../partials/ACube.astro";

const { class: classes, title, tags, author, image, ...rest } = Astro.props;
---

<GenericCard class={`w-full max-w-[21rem] ${classes ? classes : ''}`} {...rest}>
	<ACube class="w-full">
		<div class="grid grid-rows-2 h-full">
			<div class="overflow-hidden">
				<img class="max-w-full" src={image} alt={`Blog title image for the blog post: ${title}`} />
			</div>
			<div class="flex-1 px-4 flex flex-col justify-between text-black">
				<div class="flex-1 flex flex-col justify-start space-y-1">
					<ul class="pt-3 flex text-sm font-medium">
						{tags.map((tag) => (<li class="bg-steel text-white">#{tag}</li>))}
					</ul>
					<h2 class="text-lg xl:text-2xl overflow-hidden text-ellipsis clamp">{title}</h2>
				</div>
				<p class="pb-3 text-xs uppercase font-semibold">
					{author}
				</p>
			</div>
		</div>
	</ACube>
</GenericCard>

<style>
	.clamp {
  	-webkit-line-clamp: 3;
		max-height: calc(line-height * 3);
	}
</style>