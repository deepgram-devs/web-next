---
import GenericCard from "./GenericCard.astro";

const { class: classes, post } = Astro.props;

const slug = post.slug ? post.slug || post.frontmatter.slug || post.file.split("/")[post.file.split("/").length - 2] : null

---

<GenericCard class={`generic-docs-card w-full sm:w-5/6 md:w-full ${classes ? classes : ""}`} href={slug? `/${slug}` : post.linkHref}>
	<slot />
</GenericCard>

<style>

  .generic-docs-card :global(h3) {
    @apply text-base m-0 mb-2;
	}
</style>