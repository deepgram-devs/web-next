---
import GenericCard from "./GenericCard.astro";

const { class: classes, title, tags, author, image, ...rest } = Astro.props;
---

<GenericCard class={`w-full max-w-[21rem] ${classes ? classes : ''}`} {...rest}>
	<div class="flex">
		<div class="flex flex-col justify-between text-black p-2">
			<h5 class="">{title}</h5>
			<div class="text-xs">
				<p><span class="uppercase font-semibold">{author}</span> on July 4, 2022</p>
			</div>
		</div>
		<div class="shrink-0 w-[6rem] p-[0.5rem] flex justify-end place-items-end">
			<img class="h-[5rem] object-cover" src={image} alt={`Blog title image for the blog post: ${title}`} />
		</div>
	</div>
</GenericCard>