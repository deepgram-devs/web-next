---
import GenericCard from "./GenericCard.astro";

const { class: classes, title, jobtitle, image, ...rest } = Astro.props;
---

<GenericCard class={classes ? classes : ""} {...rest}>
	<div class="flex">
		<div class="shrink-0 w-[6rem] md:w-[8rem]">
			<img class="h-[6rem] md:h-[8rem] object-cover rounded-full" src={image} alt={`Blog title image for the blog post: ${title}`} />
		</div>
		<div class="flex flex-col ml-4 pt-2 md:pt-8">
			<h4 class="text-xl md:text-2xl">{title}</h4>
			<h5 class="text-base md:text-xl text-storm">{jobtitle}</h5>
		</div>
	</div>
</GenericCard>
