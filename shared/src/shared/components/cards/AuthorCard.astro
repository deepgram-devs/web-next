---
import GenericCard from "./GenericCard.astro";

const { class: classes, author } = Astro.props;
---

<GenericCard class={classes ? classes : ""} href={`/authors/${author.slug}`}>
	<div class="flex">
		<div class="shrink-0 w-[6rem] md:w-[8rem]">
			<img class="h-[6rem] md:h-[8rem] w-[6rem] md:w-[8rem] object-cover rounded-full" src={author.picture} alt={`Blog title image for the blog post: ${author.title}`} />
		</div>
		<div class="flex flex-col ml-4 pt-2 md:pt-8">
			<h4>{author.title}</h4>
			<h5 class="text-storm">{author.jobtitle}</h5>
		</div>
	</div>
</GenericCard>
