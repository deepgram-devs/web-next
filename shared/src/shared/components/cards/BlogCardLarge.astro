---
import TagsList from "../lists/TagsList.astro";
import Authors from "../strings/Authors.astro";
import ImageSrcSet from "../images/ImageSrcSet.astro";
import GenericBlogCard from "./GenericBlogCard.astro";

const { class: classes, post } = Astro.props;
let { title } = post.content;
const { title: originalTitle, description, tags, authors, cover_image } = post.content;

title = title.length > 80 ? `${title.substring(0, 77)}...` : title;
---

<GenericBlogCard class={`w-full flex flex-col ${classes ? classes : ""}`} post={post}>
	<div class="overflow-hidden flex h-3/5 md:h-2/3 lg:h-3/5 place-content-center">
		<ImageSrcSet class="object-cover w-full h-full" filename={cover_image.filename} alt={`Blog title image for the blog post: ${originalTitle}`} />
	</div>
	<div class="px-4 pb-4 flex flex-col h-2/5 md:h-1/3 lg:h-2/5 justify-between text-white">
		<div class="h-full flex flex-col justify-evenly">
			<TagsList tags={tags} />
			<h2 title={originalTitle} class="lg:text-h2-d md:text-h2-m text-h4-m py-2">{title}</h2>
			<p class="hidden lg:block">{description}</p>
		</div>

		<Authors authors={authors} />
	</div>
</GenericBlogCard>
