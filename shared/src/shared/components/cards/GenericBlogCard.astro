---
import GenericCard from "./GenericCard.astro";
const { class: classes, post } = Astro.props;
const slug = post.slug;
---

<GenericCard class={`transparent-blur min-w-[10rem] bg-steel/50 ${classes ? classes : ""}`} href={`/${slug}`}>
	<slot />
</GenericCard>

<style>
	.transparent-blur {
		backdrop-filter: blur(10px);
	}
</style>
