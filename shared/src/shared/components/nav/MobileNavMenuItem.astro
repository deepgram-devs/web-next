---
import Icon from "../general/Icon.astro";
import Link from "../general/Link.astro";

const { icon, href } = Astro.props;
---

<Link href={href} icon={icon} class="group w-full flex items-center py-4 px-6 lg:px-10 text-white">
	<slot />
	<Icon icon="arrow-right" class="w-[1em] h-[1em] fill-lightIris" />
</Link>
