---
import Link from "../general/Link.astro";
const { headings, docsType, classes }= Astro.props
---
<nav class={classes}>
{headings && headings.length > 0 && <h5 class="hidden pt-8 pb-5 xl:block">IN THIS {docsType}</h5>}
	<ul class="hidden xl:block">
		{headings && headings.length > 0 &&
			headings
				.filter((heading) => heading.depth >= 2 && heading.depth <= 3)
				.map((heading) => (
					
						{
							heading.depth === 3 
							?
							<li class="text-xs pl-4 pr-8 pb-4 border-l border-r border-stone">
							<Link class="text-steel" href={`#${heading.slug}`}>{heading.text}
							</Link> 
							</li>
							:
							<li class="text-xs pb-4 border-stone border-r">
							<Link class="text-steel" href={`#${heading.slug}`}>{heading.text}
							</Link>
							</li>
						}
							
				
				))}
	</ul>
</nav>