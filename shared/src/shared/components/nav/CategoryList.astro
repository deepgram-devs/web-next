---
import Icon from "../general/Icon.astro";

const modules = import.meta.glob("../../../../src/content/blog/category/*.json");

async function getCategories() {
	let paths = [];
	for (const path in modules) {
		const result = await modules[path]();
		paths.push({ slug: "/categories/" + path.split("/").pop().replace(".json", " ").trim(), title: result.title });
	}
	return paths;
}

const categories = await getCategories();
---

<div>
	<div class="hidden lg:block mb-10">
		<h3>Categories</h3>
		<ul>
			{categories &&
				categories.map((cat) => {
					return (
						<li>
							<a href={cat.slug}>{cat.title}</a>
						</li>
					);
				})}
		</ul>
		<button class="button button--quinary button--small">View All</button>
	</div>
	<div x-data="{ open: false }" class="block lg:hidden mb-10">
		<a @click="open = !open" class="button button--senary button--small button--block flex justify-between">
			<span>Categories</span>
			<Icon icon="angle-down" class="fill-gray-300 w-[1em] h-[1em]" x-bind:class="{ 'rotate-180' : open }" />
		</a>
		<ul class="hidden" x-bind:class="{hidden: !open, block: open}">
			{categories &&
				categories.map((cat) => {
					return (
						<li>
							<a href={cat.slug}>{cat.title}</a>
						</li>
					);
				})}
		</ul>
	</div>
</div>

<style>
	h3 {
		@apply pb-8;
	}

	li a {
		@apply text-darkCharcoal hover:text-fireEngine font-semibold leading-5;
	}

	li {
		@apply pb-4;
	}

	button {
		@apply mt-6;
	}
</style>
