---
import InlineIcon from "../general/InlineIcon.astro";

const { href, icon } = Astro.props;
---

<a href={href} class="flex text-white items-center gap-2">
	<p class="flex text-lightIris items-center space-x-3">
		<InlineIcon icon="arrow-right" iconSuffix>
			<span class="text-cloud">
				<InlineIcon icon={icon}>
					<slot />
				</InlineIcon>
			</span>
		</InlineIcon>
	</p>
</a>
