---
import Icon from "../general/Icon.astro";
import Link from "../general/Link.astro";

const { href, icon } = Astro.props;
---

<Link href={href} icon={icon} class="container draw-underline decoration-lightIris flex text-cloud items-center gap-2 big-icon">
	<span><slot /></span>
	<Icon icon="arrow-right" class="inner w-[1em] h-[1em] fill-lightIris" />
</Link>

<style>
	.container:hover .inner {
		@apply transition-[margin] ease-in-out duration-300;
		@apply ml-1;
	}
	.container .inner {
		@apply transition-[margin] ease-in-out duration-300;
	}

	.draw-underline span {
		@apply relative inline-block;
	}

	.draw-underline span:after {
		@apply absolute bottom-0 left-0 h-[0.125rem] w-full bg-current;
		content: "";
		transform: scaleX(0);
		transform-origin: bottom left;
		transition: transform 0.25s ease-out;
	}

</style>
