---
import GenericCard from "../../shared/components/cards/GenericCard.astro";

const { class: classes, title, cover, href } = Astro.props;
---

<GenericCard class={`min-w-[10rem] bg-mist/50 shadow-dg bg-blur w-full flex justify-between ${classes ? classes : ""}`} href={href}>
	<div class="flex grow flex-col h-full justify-between text-black p-2 pb-3">
		<div>
			<h5 class="inline-block text-lg leading-5">{title}</h5>
		</div>
	</div>
	<div class="shrink-0 w-[7rem] p-[0.5rem] flex justify-end place-items-start">
		<img class="h-[6rem] object-cover" src={cover} alt={`Blog title image for the blog post: ${title}`} />
	</div>
</GenericCard>
