{
  "name": "@deepgram-web/shared",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "yarn": "^1.22.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "predev": "yarn clean && yarn symlink",
    "prebuild": "yarn clean && yarn copy",
    "symlink": "yarn content:symlink",
    "copy": "yarn content:copy",
    "clean": "yarn content:clean",
    "content:symlink": "ln -s ../../content/blog/ ./src/content",
    "content:copy": "cp -r ../content/blog/ ./src/content/",
    "content:clean": "rm -rf ./src/content",
    "lint": "cd .. && ./node_modules/.bin/prettier --check ./shared"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^0.2.1",
    "@astrojs/vue": "^0.1.5",
    "@types/node": "^17.0.42",
    "astro": "^1.0.0-rc.2",
    "glob": "^8.0.3",
    "node-html-parser": "^5.3.3"
  },
  "dependencies": {
    "netlify-cli": "^10.17.3",
    "vue": "^3.2.33"
  }
}
