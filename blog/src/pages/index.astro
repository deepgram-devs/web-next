---
import ContrastSection from "../shared/components/decoration/ContrastSection.astro";
import PrimarySection from "../shared/components/layout/PrimarySection.astro";
import Layout from "../layouts/Default.astro";
import BlogCardLarge from "../shared/components/cards/BlogCardLarge.astro";
import BlogCard from "../shared/components/cards/BlogCard.astro";
import BlogCardSmall from "../shared/components/cards/BlogCardSmall.astro";
---

<Layout>
	<ContrastSection contrast="cloud" background="white" class="bg-sound-wave-cloud-dark" bottomDivider="eclipse-divider" bottomOverlay>
		<PrimarySection class="pt-14">
			<h1 class="mb-8">Deepgram Blog ⚡️</h1>
			<div class="grid gap-5 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
				<div class="lg:col-span-2 xl:col-span-3 grid gap-5 xl:grid-cols-3 ">
					<div class="xl:order-last xl:col-span-2 flex">
						<BlogCardLarge
							class="text-red-500"
							href="/"
							title="Top 3 Use Cases for Speech-to-Text in Gaming"
							description="In the gaming industry, speech-to-text and voice recognition technology are becoming more and more commonplace. This is due to the fact that they offer a number of advantages for both developers and players alike."
							tags={["Vue"]}
							author="Chris Doty"
							image="https://placeimg.com/1200/627/animals/1"
						/>
					</div>
					<div class="grid gap-5 lg:hidden xl:grid xl:grid-rows-2 ">
						<BlogCard href="/" title="Top 3 Use Cases for Speech-to-Text in Gaming" tags={["Vue"]} author="Chris Doty" image="https://placeimg.com/1200/627/animals/3" />
						<BlogCard
							class="sm:hidden lg:block"
							href="/"
							title="Top 3 Use Cases for Speech-to-Text in Gaming"
							tags={["Vue"]}
							author="Chris Doty"
							image="https://placeimg.com/1200/627/animals/2"
						/>
					</div>
				</div>
				<div class="grid gap-5 grid-rows-5">
