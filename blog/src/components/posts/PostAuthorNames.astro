---
import Link from "../../shared/components/general/Link.astro";
import AuthorName from "../../shared/components/strings/AuthorName.astro";

const { authors } = Astro.props;
---

{authors && (
	<span class="author-names">
		{authors.map((author, index, array) => (
			<Link href={`/authors/${author.slug}`} class="text-lightIris inline-block">
				<AuthorName author={author} />
			</Link>
		))}
	</span>
)}

<style>
	.author-names a:not(:first-child)::before {
		content: ", ";
	}
	.author-names a:not(:first-child):last-child {
		@apply pl-1;
	}
	.author-names a:not(:first-child):last-child::before {
		content: "& ";
	}
</style>
