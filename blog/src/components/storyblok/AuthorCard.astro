---
import { storyblokEditable } from "@storyblok/astro";

// import GenericCard from "./GenericCard.astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { class: classes, blok } = Astro.props;
console.log("blok", blok.slug);
---

<a class={classes ? classes : ""} href={`/authors/${blok.slug}`} {...storyblokEditable(blok)}>
	<div class="flex">
		<div class="shrink-0 w-[6rem] md:w-[8rem]">
			<img class="h-[6rem] md:h-[8rem] w-[6rem] md:w-[8rem] object-cover rounded-full" src={blok.content.picture.filename} alt={`Author image for ${blok.content.title}`} />
		</div>
		<div class="flex flex-col ml-4 pt-2 md:pt-8">
			<h4>{blok.content.title}</h4>
			<h5 class="text-storm">{blok.content.jobtitle}</h5>
		</div>
	</div>
</a>
